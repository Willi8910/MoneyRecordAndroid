<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="!"
            android:id="@+id/btnhstInfo"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/txthstTotal"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:text="Tanggal : "
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:id="@+id/txthstTanggal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:text="Total : "
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:id="@+id/txthstTotal"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txthstTanggal" />

        <TextView
            android:text="Konsumsi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txthstKonsumsi"
            tools:layout_editor_absoluteY="53dp"
            tools:layout_editor_absoluteX="9dp"
            android:visibility="gone" />

        <TextView
            android:text="Spesial :"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txthstSpesial"
            tools:layout_editor_absoluteY="125dp"
            tools:layout_editor_absoluteX="9dp"
            android:visibility="gone" />

        <TextView
            android:text="Biaya Hidup :"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txthstHidup"
            tools:layout_editor_absoluteY="78dp"
            tools:layout_editor_absoluteX="9dp"
            android:visibility="gone" />

        <TextView
            android:text="TextView"
            android:layout_width="101dp"
            android:layout_height="24dp"
            android:id="@+id/txthidhstTanggal"
            android:visibility="visible"
            tools:layout_editor_absoluteY="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/txthstTanggal" />

        <TextView
            android:text="Lainnya : "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txthstLainnya"
            android:layout_below="@+id/txthidhstTanggal"
            android:layout_toEndOf="@+id/txthidhstTanggal"
            tools:layout_editor_absoluteY="102dp"
            tools:layout_editor_absoluteX="9dp"
            android:visibility="gone" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>