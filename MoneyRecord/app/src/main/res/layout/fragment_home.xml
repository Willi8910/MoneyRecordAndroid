<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.williamlie8910.money.beranda">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txthomeTanggal"
            android:layout_gravity="right"
            android:textAlignment="viewEnd"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:textSize="16sp" />

        <TextView
            android:text="Total Bulan ini: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="50dp" />

        <TextView
            android:text="88888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTotal"
            android:textSize="30sp"
            android:textAlignment="center" />

        <TextView
            android:text="Total Hari ini : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="25dp" />

        <TextView
            android:text="88888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTotalDay"
            android:textSize="30sp"
            android:textAlignment="center" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginTop="30dp">

            <Button
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnhomeNext"
                android:layout_gravity="right"
                android:layout_marginRight="20dp" />

            <Button
                android:text="Prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnhomePrev"
                android:layout_marginLeft="20dp" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
